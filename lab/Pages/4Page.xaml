<Page x:Class="lab.Pages._4Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="_4Page">

    <Grid> 
        <StackPanel Margin="10">
            <Button Name="back" Content="Назад" Click="back_Click"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите число А: "/>
                <TextBox Name="num1" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите число B: "/>
                <TextBox Name="num2" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите число C: "/>
                <TextBox Name="num3" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите число D: "/>
                <TextBox Name="num4" Width="100"/>
            </StackPanel>
            <Button Name="next" Content="Проверить" Click="next_Click"/>
            <TextBlock Name="rez"/>
        </StackPanel>
    </Grid>
</Page>
